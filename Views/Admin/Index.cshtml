@model Teretana.Models.RadnikBO

@{
    ViewData["Title"] = "Admin";
    ViewData["Admin"] = "active";
    Layout = "~/Views/Shared/_RadnikLayout.cshtml";
}
<div class="row">
    <div class="col-8 margin-t-50">
        <div class="row">
            <div class="col-6">
                <div class="mb-3 row">
                    <label asp-for="ImePrezime" class="col-5 col-form-label text-muted"></label>
                    <div class="col">
                        <input asp-for="ImePrezime" readonly class="form-control-plaintext input-boja bold">
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3 row">
                    <label asp-for="Email" class="col-5 col-form-label text-muted"></label>
                    <div class="col">
                        <input asp-for="Email" readonly class="form-control-plaintext input-boja bold">
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3 row">
                    <label asp-for="Adresa" class="col-5 col-form-label text-muted"></label>
                    <div class="col">
                        <input asp-for="Adresa" readonly class="form-control-plaintext input-boja bold">
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3 row">
                    <label asp-for="BrojTelefona" class="col-5 col-form-label text-muted"></label>
                    <div class="col">
                        <input asp-for="BrojTelefona" readonly class="form-control-plaintext input-boja bold">
                    </div>
				</div>
			</div>
            <div class="col-6">
                <div class="mb-3 row">
                <label asp-for="DatumRodjenja" class="col-5 col-form-label text-muted"></label>
                    <div class="col">
                        <input asp-for="DatumRodjenja" readonly class="form-control-plaintext input-boja bold">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="align-center margin-t-50 mb-3">
            <div class="col-6 mb-3 d-grid gap-2">
                <a type="button" class="btn btn-info" asp-controller="Ocitavanje" asp-action="Index">Očitavanje klijenata</a>
            </div>
            <div class="col-6 mb-3"></div>
            <div class="col-6 mb-3 d-grid gap-2">
                <a type="button" class="btn btn-info" asp-controller="Magacin" asp-action="Index">Kontrola magacina</a>
            </div>
            <div class="col-6"></div>
            <div class="col-6 mb-3 d-grid gap-2">
                <a type="button" class="btn btn-info" asp-controller="Narucivanje" asp-action="Index">Pravljenje porudžbenice</a>
            </div>
            <div class="col-6"></div>
            <div class="col-6 mb-3 d-grid gap-2">
                <a type="button" class="btn btn-info" asp-controller="Racuni" asp-action="Index">Pregled računa</a>
            </div>
        </div>
    </div>
</div>